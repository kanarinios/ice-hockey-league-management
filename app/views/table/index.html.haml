- if @teams.present?
  %table.table
    %thead
      %tr
        %th=t('.lp')
        %th=t('.team_name')
        %th=t('.matches')
        %th=t('.points')
    - @teams.each_with_index do |team, index|
      %tbody
        %tr
          %td= index + 1
          %td= link_to team.name, team_path(team)
          %td= team.ended_matches.count
          %td= team.points
