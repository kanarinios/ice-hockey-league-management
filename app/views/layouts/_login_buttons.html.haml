.btn-group
  - if user_signed_in?
    %button.btn.btn-default.dropdown-toggle.navbar-btn.user-btn{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
      = current_user.first_name
      %span.caret
    %ul.dropdown-menu.dropdown-menu-right{:role => "menu"}
      %li
        = link_to(t(".edit_account"), edit_user_registration_path)
    = link_to(t('.log_out'), destroy_user_session_path, :method => :delete, class: "button btn btn-primary navbar-btn user-btn")
  -else
    = link_to(t('.sign_in'), new_user_session_path, class: "button btn btn-default navbar-btn")
