%nav.navbar.navbar-default
  .container-fluid.main-navigation
    .navbar-header
      .home-image
        = link_to image_tag("home.png"), root_path
    - if current_user.present?
      = render "menu_navbar"
    .btn-group
      - if user_signed_in?
        %button.btn.btn-default.dropdown-toggle.navbar-btn.user-btn{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
          = current_user.first_name
          %span.caret
        %ul.dropdown-menu.dropdown-menu-right{:role => "menu"}
          %li
            %a{:href => "#"} Action
          %li
            %a{:href => "#"} Another action
          %li
            %a{:href => "#"} Something else here
        = link_to('Log out', destroy_user_session_path, :method => :delete, class: "button btn btn-primary navbar-btn user-btn")
      -else
        = link_to('Sign in', new_user_session_path, class: "button btn btn-default navbar-btn")
